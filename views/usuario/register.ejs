<%- include('../compartido/estilos-generales/estilos-generales-component')%>

<body>
<div class="container">
    <% if(datos.error){ %>
        <div class="alert alert-danger" role="alert">
            <%= datos.error %>
        </div>
    <% } %>
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div id="second">
                <div class="myform form ">
                    <div class="logo mb-3">
                        <div class="col-md-12 text-center">
                            <h1 >REGISTRO</h1>
                            <h3 >A una cuenta de ser tú mejor versión</h3>
                        </div>
                    </div>
                    <form action="/usuario/registerUsuarioVista" name="registration"  method="POST">
                        <div class="form-group">
                            <label for="nombreUsuario">Nombre</label>
                            <input type="text"  name="nombreUsuario" class="form-control" id="nombreUsuario" aria-describedby="emailHelp" placeholder="Ejm: Joel" required="true">
                            <small id="nombreIDHelp"
                                   class="form-text text-muted">
                                Ingresa un nombre mayor a 3 caracteres y menor a 10.
                            </small>
                        </div>
                        <div class="form-group">
                            <label for="apellidoUsuario">Apellido</label>
                            <input type="text"  name="apellidoUsuario" class="form-control" id="apellidoUsuario" aria-describedby="emailHelp" placeholder="Ejm: Villacis" required="true">
                            <small id="apellidoIDHelp"
                                   class="form-text text-muted">
                                Ingresa un Apellido mayor a 3 caracteres y menor a 10.
                            </small>
                        </div>
                        <div class="form-group">
                            <label for="cedulaUsuario">Cédula</label>
                            <input type="text"  name="cedulaUsuario" class="form-control" id="cedulaUsuario" aria-describedby="emailHelp" placeholder="Ejm: 1111111111" required="true">
                            <small id="cedulaIDHelp"
                                   class="form-text text-muted">
                                Ingrese el formato correcto de la cédula.
                            </small>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="email" name="correo"  class="form-control" id="correo" aria-describedby="emailHelp" placeholder="Ejm: usuario@reservenow.com" required="true">
                            <small id="emailIDHelp"
                                   class="form-text text-muted">
                                Ingrese un formato de email correcto.
                            </small>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password"  class="form-control" aria-describedby="emailHelp" placeholder="Ejm: ********">
                            <small id="cedulaIDHelp"
                                   class="form-text text-muted">
                                Ingrese 8 o mas caracteres.
                            </small>
                        </div>
                        <div class="col-md-12 text-center mb-3">
                            <button type="submit" class="btn btn-warning">Registrarse</button>
                        </div>
                        <div class="col-md-12 text-center mb-3">
                            <button type="reset"
                                    class="btn btn-secondary">Limpiar Formulario</button>
                        </div>

                        <div class="col-md-12 ">
                            <p class="text-center">Ya tienes una cuenta? <a href="/usuario/login">Login</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>