<%- include('../compartido/estilos-generales/estilos-generales-component')%>

<h1> A G E N D A R </h1>
<%if(typeof parametrosConsulta != 'undefined') {%>
    <p class="h4">MENSAJE: <%= parametrosConsulta.mensaje%></p>
<%}%>
<h2> Presiona en consultar horarios, para observar  los horarios</h2>

<form action="/horario/vista/agendar"
      method="GET">
    <div class="form-group">
    <label for="busqueda" class="h4">Busqueda:</label>
    <input id="busqueda" class="form-control" type="text" name="busqueda">
        <div class="col-md-12 text-center mb-3">
            <button type="submit" class="btn btn-secondary" > CONSULTAR HORARIOS</button>
        </div>

    </div>
</form>
<table class="table table-dark">
    <!--table row-->
    <tr>
        <!--table header-->
        <th>Dia</th>
        <th>Hora de Inicio</th>
        <th>Hora de finalizacion</th>
        <th>Acciones</th>
    </tr>
    <% arregloHorarios.forEach( (objeto)=>{ %>
        <tr>
            <td><%= objeto.dia %></td>
            <td><%= objeto.hora_inicio %></td>
            <td><%= objeto.hora_final %></td>
            <td>

                <a href="/horario/vista/editar/<%= objeto.idHorario %>">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="submit" class="btn btn-secondary">Editar Horario</button>

                    </div>
                </a>

                <form action="/horario/eliminarDesdeVista/<%= objeto.idHorario %>"
                      method="POST">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="submit" class="btn btn-secondary">Eliminar Horario</button>

                    </div>


                </form>
            </td>
        </tr>
    <% } ) %>

</table>
<h2> Presiona en agendar cita para seleccionar un horario </h2>
<div class="col-md-12 text-center mb-3">
    <a href="/horario/vista/crear">
        <button class="btn btn-secondary">AGENDAR CITA</button>
    </a>
    <a href="/usuario/atras">
        <button class="btn btn-secondary" type="button">ATRAS</button>
    </a>

</div>

<%- include('../compartido/pie-de-pagina')%>





